<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
    <link rel="stylesheet" href="css/style.css">

    <title>Quiz portal</title>
</head>

<body>
    <div class="container">
        <h1 class="title">Welcome to the quiz portal</h1>
        <center>
            <h2>
                <%=gender=="male"? "Mr." : "Miss." %>
                    <%= username %>
            </h2>
        </center>
        <ul class="list-group">
            <% let index=0; for (let q of questions) {%>

                <li class="list-group-item">
                    <input class="form-check-input me-1" type="checkbox" value="" aria-label="...">
                    <%= q %>

                    <div class="options">
                        <button id="<%=index%>a" class="btn btn-outline-primary opns" role="button" data-bs-toggle="button">option
                            A</button>
                        <button id="<%=index%>b" class="btn btn-outline-primary opns" role="button" data-bs-toggle="button"
                            aria-pressed="true">option B</button>
                    
                    </div>
                </li>
               

                

                   


                    <% index++; } %>
        </ul>

        <button id="fetchScore" type="button" class="btn btn-success">Submit</button>
    </div>



    <form action="/play" id="submitForm" method="POST">
        <input id="answerForm" type="text" name="score" value="">
    </form>

    <script>
        const optionArr = document.querySelectorAll('.options');
        const set = new Set();
        const answerForm = document.querySelector('#answerForm');


        for (let subOptions of optionArr) {
            const buttonA = subOptions.children[0];
            const buttonB = subOptions.children[1];


            buttonA.addEventListener('click', function () {
                buttonA.classList.add('active');
                buttonB.classList.remove('active');
                set.add(buttonA.id);
                set.delete(buttonB.id);
            });

            buttonB.addEventListener('click', function () {
                buttonB.classList.add('active');
                buttonA.classList.remove('active');

                set.add(buttonB.id);
                set.delete(buttonA.id);
            });



        }

        const fetchScore = document.querySelector("#fetchScore");
        fetchScore.addEventListener('click', function () {
            let score = 0;
            var answers = <% - JSON.stringify(answers) %>;
            for (let i = 0; i < answers.length; i++)
                if (set.has(answers[i]))
                    score++;


            answerForm.value = score;

            const submitForm = document.querySelector("#submitForm");
            submitForm.submit();
        })




        const userDefinedQuestions = {};





    </script>

</body>

</html>