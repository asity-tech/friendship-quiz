<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />

    <link rel="stylesheet" href="css/style.css">

    <title>ada</title>
</head>

<body>
        <div class="container">
            <div class="input-group mb-3">
                <form action="/login" autocomplete="off" method="POST" id="next">
                    <input type="text" name="username" class="form-control title" placeholder="Username"
                        aria-label="Username">
                    <div class="gender">
                        <button type="button" id="male" name="male" class="btn btn-outline-primary active" role="button"
                            data-bs-toggle="button">Male</button>
                        <button type="button" id="female" name="female" class="btn btn-outline-primary " role="button"
                            data-bs-toggle="button" aria-pressed="true">Female</button>

                    </div>

                    <button type="submit" class="btn btn-outline-success submitBtn">Submit</button>
                </form>
            </div>

            <br>



        </div>

    

    <script>

        const maleBtn = document.querySelector('.gender #male');
        const femaleBtn = document.querySelector('.gender #female');

        maleBtn.addEventListener('click', function () {
            maleBtn.classList.add('active');
            femaleBtn.classList.remove('active');
            maleBtn.value = "1";
            femaleBtn.value = "0";
        })
        femaleBtn.addEventListener('click', function () {
            femaleBtn.classList.add('active');
            maleBtn.classList.remove('active');
            maleBtn.value = "0";
            femaleBtn.value = "1";
        })


    </script>
</body>

</html>