<!DOCTYPE html>
<html lang="en">
  <%-include('partials/head', {title: "🍁Friendship Quiz🍁"})%> <% const
  toSentenceCase = function(str){ return str.split(' ') .map(w =>
  w[0].toUpperCase() + w.substr(1).toLowerCase()) .join(' ') } %>

  <body class="my-5">
    <div class="mt-5 pt-5"><%- include('partials/avatar.ejs')%></div>
    <div class="my-5">
      <h4 class="text-center wow fadeInUp" data-wow-delay="200ms">
        Hey <%=gender=="male"? "Mr." : "Miss." %> <%= toSentenceCase(username)
        %>, let's create a set of question for you
      </h4>
      <p class="text-secondary wow fadeInUp" data-wow-delay="300ms">
        If you get stuck somewhere you can open the offcanvas and check the
        crystal clear instruction to get more clearity, yaa.
      </p>
    </div>
    <section id="quesListParent" class="w-100">
      <!-- inserting all the question here -->
    </section>
    <div class="container row col-sm-6 col-md-10">
      <button
        id="cook"
        type="button"
        class="btn btn-primary shine-hover wow fadeInUp"
        data-wow-delay="400ms"
        onclick="cook()"
      >
        I'm done, let's share it
      </button>
    </div>

    <!-- Modal -->
    <div class="fab" id="editToggle" onclick="editButtonToggle(this)">
      <img src="../assets/edit.svg" alt="" />
    </div>

    <%- include('partials/offcanvas.ejs')%> <%- include('partials/modal.ejs')%>
    <%- include('partials/footer.ejs')%> <%-include('partials/footer.ejs')%>

    <script>
      const gender = "<%=gender%>";
      const date = "<%=date%>";
      const username = "<%=username%>";
    </script>
    <script src="/js/make.js"></script>
  </body>
</html>
