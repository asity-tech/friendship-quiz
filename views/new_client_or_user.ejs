<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
    <link rel="stylesheet" href="wow/animate.css">
    <link rel="stylesheet" href="css/style.css">
    <title>FriendShip Quiz</title>
</head>

<body class="vh-100 d-flex flex-column justify-content-center align-items-center">
    <div class="col-xxl-4 col-xl-4 col-lg-6 col-md-8 col-sm-10 col-11">
        <div class="
          d-flex
          justify-content-center
          align-items-center
          avatar-wrapper
          wow
          fadeInUp
        " data-wow-delay="300ms">
            <img src="assets/avatar.png" class="avatar-img" alt="" />
            <img src="assets/pulse.gif" alt="" class="avatar-pulse position-absolute" />
        </div>
        
        <div class="w-100">

            <div class="d-flex gap-3 my-3 wow fadeInUp" data-wow-delay="600ms">
                <button type="button" id="newuser" class="btn btn-light col"  onclick="location.href = '/login';">Create A Quiz</button>
            </div>

            <br>
            <div class="wow fadeInUp" data-wow-delay="600ms">
                <label for="usercode" class="form-label">Have a code?</label>
                <input type="text" class="form-control" name="usercode" id="usercode" placeholder="playcode">
                
            </div>
            <div class="d-flex gap-3 my-3 wow fadeInUp" data-wow-delay="600ms">
                <button type="button" id="clientLogin" class="btn btn-light col" >Play</button>
            </div>





        </div>
    </div>


    <script>
        // need to extract the username in case someone pastes a URL
        // REGEX pattern can fix that
        const clientLoginBtn = document.querySelector('#clientLogin');

        clientLoginBtn.addEventListener('click', function () {
            let usercode = document.querySelector("#usercode").value;
            if (usercode == null || usercode == '') {
                alert("Quiz Code Can't be empty");
                return;
            }

            location.href = `/${usercode}/play`;
        });
    </script>
</body>


</html>