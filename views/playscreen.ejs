    <% for(let q of quesArr){ %>
        <section id="questionArea" class="d-flex flex-column justify-content-center align-items-center">
            <h4 class="mb-4 pb-4">
                <%= q.question %>
            </h4>
            <div class="d-grid col-4 gap-3">
    
                <button type="button" class="text-start btn btn-secondary col">
                    <%= q.option_a %>
                </button>
                <button type="button" class="text-start btn btn-secondary col">
                    <%= q.option_b %>
                </button>
                <button type="button" class="text-start btn btn-secondary col">
                    <%= q.option_c %>
                </button>
                <button type="button" class="text-start btn btn-secondary col">
                    <%= q.option_d %>
                </button>
                <a href="share.html">
                    <button type="button" class="btn btn-primary w-100">Next</button></a>
                <button type="button" class="btn btn-light">Skip</button>
            </div>
        </section>
        

    <% } %>

