<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/wow/animate.css" />
    <link rel="stylesheet" href="/css/style.css" />

    <style>
      /* abhisek custom experiment */
      .btn:focus,
      .btn-light:focus {
        outline: none;
        box-shadow: none;
      }
    </style>

    <title>question-responder</title>
  </head>

  <body
    class="vh-100 d-flex flex-column justify-content-center align-items-center"
  >
    <div class="col-xxl-4 col-xl-4 col-lg-6 col-md-8 col-sm-10 col-11">
      <h4
        class="
          d-flex
          flex-column
          justify-content-center
          align-items-center
          mt-4
          mb-5
        "
      >
        <%=id%>'s question for <%=clientName%>
      </h4>

      <section
        id="quesNavigator_v2"
        class="d-flex justify-content-between mb-2 overflow-scroll"
      ></section>

      <section id="0" class="quesArea_version_2">
        <div>
          <h4 id="quesStr">Question Dummy</h4>
        </div>

        <div id="options" class="w-100 my-3 options">
          <button
            type="button"
            class="btn btn-light w-100 fadeInUp my-3"
            id="option_a"
          >
            A
          </button>
          <button
            type="button"
            class="btn btn-light w-100 fadeInUp"
            id="option_b"
          >
            B
          </button>
          <button
            type="button"
            class="btn btn-light w-100 fadeInUp my-3"
            id="option_c"
          >
            C
          </button>
          <button
            type="button"
            class="btn btn-light w-100 fadeInUp"
            id="option_d"
          >
            D
          </button>
        </div>
        <button
          id="nextBtn"
          type="button"
          class="
            btn
            w-100
            h-100
            d-flex
            justify-content-around
            align-items-center
            position-relative
          "
        >
          Next
          <div class="progress btn position-absolute w-100 h-100">
            <div
              id="nxtBtPrg"
              class="btn btn-primary progress-bar h-100"
              role="progressbar"
              style="width: 0%"
              aria-valuenow="25"
              aria-valuemin="0"
              aria-valuemax="100"
            ></div>
          </div>
        </button>
      </section>

      <form id="submForm" action="/<%=id%>/play" method="POST"></form>
    </div>
    <script>
      const quesList = <%-JSON.stringify(quesArr) %>;
      const no_of_ques = quesList.length;
      const clientName = '<%=clientName%>';
      const username =  '<%=id%>';
    </script>
    <script src="/js/playScreen_backend.js"></script>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
    <script src="/js/avatar-fetch.js"></script>
    <script src="/wow/jquery.min.js"></script>
    <script src="/wow/wow.min.js"></script>
    <script>
      new WOW().init();
    </script>
  </body>
</html>
