<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
    <link rel="stylesheet" href="css/style.css">

    <title>Quiz portal</title>
</head>

<body>
    <div class="container">
        <h1 class="title">Welcome to the quiz portal</h1>
        <center>
            <h2>
                <%=gender=="male"? "Mr." : "Miss." %>
                    <%= username %>
            </h2>
        </center>
        <div class="list-group">
            <% let index=0; for (let q of questions) {%>

                <section class="list-group-item" id="ques" aria-current="true">
                    <input type="text" id="quesEditor" class="form-control mt-1 mb-3" value="<%= q %>"> 

                    <div class="options">
                        <input type="text" value="option A" id="<%=index%>a" class="btn btn-outline-success opns"
                            role="button" data-bs-toggle="button">
                        </input>

                        <input type="text" value="option B" id="<%=index%>b" class="btn btn-outline-success opns"
                            role="button" data-bs-toggle="button" aria-pressed="true">
                        </input>
                        <input type="text" value="option C" id="<%=index%>c" class="btn btn-outline-success opns"
                            role="button" data-bs-toggle="button" aria-pressed="true">
                        </input>
                        <input type="text" value="option D" id="<%=index%>d" class="btn btn-outline-success opns"
                            role="button" data-bs-toggle="button" aria-pressed="true">
                        </input>



                    </div>
                    <br>
                    <br>
                    <br>
                </section>






                <% index++; } %>
        </div>

        <button id="fetchScore" type="button" class="btn btn-success">Submit</button>
    </div>



    <form action="/play" id="submitForm" method="POST">
        <input id="answerForm" type="text" name="score" value="">
    </form>

    <script>
        const optionArr = document.querySelectorAll('.options');
        const set = new Set();
        const answerForm = document.querySelector('#answerForm');


        for (let subOptions of optionArr) {
            const buttonA = subOptions.children[0];
            const buttonB = subOptions.children[1];
            const buttonC = subOptions.children[2];
            const buttonD = subOptions.children[3];


            // FEATURE will show blank value on button focus and show optionA/b/c/d on leave focus  

            buttonA.addEventListener('click', function (e) {
                e.stopPropagation();
                buttonA.classList.add('active');
                buttonB.classList.remove('active');
                buttonC.classList.remove('active');
                buttonD.classList.remove('active');

                set.add(buttonA.id);
                set.delete(buttonB.id);
                set.delete(buttonC.id);
                set.delete(buttonD.id);
            });

            buttonB.addEventListener('click', function (e) {
                e.stopPropagation();
                buttonB.classList.add('active');
                buttonA.classList.remove('active');
                buttonC.classList.remove('active');
                buttonD.classList.remove('active');

                set.add(buttonB.id);
                set.delete(buttonA.id);
                set.delete(buttonC.id);
                set.delete(buttonD.id);
            });

            buttonC.addEventListener('click', function (e) {
                e.stopPropagation();
                buttonC.classList.add('active');
                buttonA.classList.remove('active');
                buttonB.classList.remove('active');
                buttonD.classList.remove('active');

                set.add(buttonC.id);
                set.delete(buttonA.id);
                set.delete(buttonB.id);
                set.delete(buttonD.id);
            });

            buttonD.addEventListener('click', function (e) {
                e.stopPropagation();
                buttonD.classList.add('active');
                buttonA.classList.remove('active');
                buttonB.classList.remove('active');
                buttonC.classList.remove('active');

                set.add(buttonD.id);
                set.delete(buttonA.id);
                set.delete(buttonB.id);
                set.delete(buttonC.id);
            });



        }

        const fetchScore = document.querySelector("#fetchScore");
        fetchScore.addEventListener('click', function () {
            let score = 0;
            // var answers = <% - JSON.stringify(answers) %>;
            // for (let i = 0; i < answers.length; i++)
            //     if (set.has(answers[i]))
            //         score++;


            answerForm.value = score;

            const submitForm = document.querySelector("#submitForm");
            submitForm.submit();
        })


       

        const userDefinedQuestions = {};

        const quesSections = document.querySelectorAll('#ques');
        for (let sec of quesSections) {
            sec.children[0].addEventListener('click',function(e){
                console.log('clicked');
                e.stopPropagation();
            })

            sec.addEventListener('click', function () {
                sec.classList.toggle('list-group-item-success');
            })


        }
    </script>

</body>

</html>