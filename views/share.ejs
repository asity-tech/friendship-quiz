<!DOCTYPE html>
<html lang="en">
  <%-include('partials/head', {title: "🍁Friendship Quiz🍁"})%>

  <body>
    <div
      class="col-xxl-6 col-xl-6 col-lg-8 col-md-8 col-sm-10 col-11 text-center"
    >
      <%- include('partials/avatar.ejs')%>
      <div class="my-5 py-5">
        <h2 class="fw-bold wow fadeInDown" data-wow-delay="100ms">
          Damn Dear, <%= id %>
        </h2>
        <p class="wow fadeInDown" data-wow-delay="200ms">
          Time to challenge my Friends, let's share the quiz by using below
          options
        </p>
      </div>
      <div class="row gap-2">
        <div class="col-md-6 col-sm-12 p-0">
          <div class="input-group mb-2 wow fadeInDown" data-wow-delay="300ms">
            <p id="copyURL" class="form-control">
              <%=`http://localhost:3000/${id.toLowerCase()}/play`%>
            </p>
            <button class="btn btn-primary" type="button" id="button-addon2">
              Copy
            </button>
          </div>
          <div class="input-group wow fadeInDown" data-wow-delay="400ms">
            <p id="copyCode" class="form-control"><%= id.toLowerCase() %></p>
            <button class="btn btn-primary" type="button" id="button-addon2">
              Copy
            </button>
          </div>
        </div>
        <div class="col-md-6 col-sm-12 row gap-2">
          <div
            class="col p-0 wow fadeInDown"
            data-wow-delay="500ms"
            onclick="copyEvent('copyURL')"
          >
            <a
              href="#"
              type="button"
              class="
                btn btn-secondary
                d-flex
                justify-content-center
                align-items-center
              "
            >
              <object
                data="../../assets/social-share-icons/whatsapp.svg"
                type="image/svg+xml"
              ></object>
            </a>
          </div>
          <div
            class="col p-0 wow fadeInDown"
            data-wow-delay="600ms"
            onclick="copyEvent('copyURL')"
          >
            <a
              href="#"
              type="button"
              class="
                btn btn-secondary
                d-flex
                justify-content-center
                align-items-center
              "
            >
              <object
                data="../../assets/social-share-icons/telegram.svg"
                type="image/svg+xml"
              ></object>
            </a>
          </div>
        </div>
      </div>
    </div>
    <%- include('partials/offcanvas.ejs')%> <%- include('partials/footer.ejs')%>
    <script>
      new WOW().init();
      function copyEvent(id) {
        var str = document.getElementById(id);
        window.getSelection().selectAllChildren(str);
        document.execCommand("Copy");
      }

      const shareButton = document.querySelector("#shareButton");
      shareButton.addEventListener("click", (event) => {
        let url = document.location.href;
        const canonicalElement = document.querySelector("link[rel=canonical]");
        if (canonicalElement !== null) {
          url = canonicalElement.href;
        }
        navigator.share({ url });
      });
    </script>
  </body>
</html>
